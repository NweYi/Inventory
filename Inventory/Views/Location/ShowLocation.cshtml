@model Inventory.Models.LocationModels.LocationModel
<div class="container">
    <div class="row pt-2 pb-2">
        <div class="col-sm-6 col-md-6 col-lg-6">
            <h5 class="modal-title" id="myModalLabel">@Html.DisplayFor(model=>model.LocationName)</h5>
        </div>
        <div class="col-sm-6 col-md-6 col-lg-6">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        </div>
    </div>
    <div class="row border-bottom"></div>
    <div class="border-left border-right border-bottom mb-3">
        <div class="row bg-gray-color mt-3 pt-2 pb-2 ml-0 mr-0">
            <div class="col-sm-6 col-md-6 col-lg-6">@Html.LabelFor(model => model.LocationName)</div>
            <div class="col-sm-6 col-md-6 col-lg-6">@Html.DisplayFor(model => model.LocationName)</div>
        </div>
        <div class="row pt-2 pb-2 ml-0 mr-0">
            <div class="col-sm-6 col-md-6 col-lg-6">@Html.LabelFor(model => model.ShortName)</div>
            <div class="col-sm-6 col-md-6 col-lg-6">@Html.DisplayFor(model => model.ShortName)</div>
        </div>
        <div class="row bg-gray-color pt-2 pb-2 ml-0 mr-0">
            <div class="col-sm-6 col-md-6 col-lg-6">@Html.LabelFor(model => model.Description)</div>
            <div class="col-sm-6 col-md-6 col-lg-6">@Html.DisplayFor(model => model.Description)</div>
        </div>
        <div class="row pt-2 pb-2 ml-0 mr-0">
            <div class="col-sm-6 col-md-6 col-lg-6">@Html.LabelFor(model => model.Code)</div>
            <div class="col-sm-6 col-md-6 col-lg-6">@Html.DisplayFor(model => model.Code)</div>
        </div>
        <div class="row bg-gray-color pt-2 pb-2 ml-0 mr-0">
            <div class="col-sm-6 col-md-6 col-lg-6">@Html.LabelFor(model => model.Phone)</div>
            <div class="col-sm-6 col-md-6 col-lg-6">@Html.DisplayFor(model => model.Phone)</div>
        </div>
        <div class="row pt-2 pb-2 ml-0 mr-0">
            <div class="col-sm-6 col-md-6 col-lg-6">@Html.LabelFor(model => model.Email)</div>
            <div class="col-sm-6 col-md-6 col-lg-6">@Html.DisplayFor(model => model.Email)</div>
        </div>
        <div class="row bg-gray-color pt-2 pb-2 ml-0 mr-0">
            <div class="col-sm-6 col-md-6 col-lg-6">@Html.LabelFor(model => model.Address)</div>
            <div class="col-sm-6 col-md-6 col-lg-6">@Html.DisplayFor(model => model.Address)</div>
        </div>
        @if (ViewBag.isMultiBranch == true)
        {
            <div class="row pt-2 pb-2 ml-0 mr-0">
                <div class="col-sm-6 col-md-6 col-lg-6">@Html.LabelFor(model => model.BranchName)</div>
                <div class="col-sm-6 col-md-6 col-lg-6">@Html.DisplayFor(model => model.BranchName)</div>
            </div>
        }                
    </div>
</div>
