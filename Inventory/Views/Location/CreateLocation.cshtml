
@model Inventory.Models.LocationModels.LocationModel
@{
    ViewBag.Title = "CreateLocation";
    Layout = "~/Views/Shared/_LayoutSetup.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        $(".alert").delay(4000).slideUp(200, function () {
            $(this).alert('close');
        });
    });   
</script>

<div class="container pl-0 pr-0">
    <div class="row">
        <div class="col-sm-6 col-md-6 col-lg-6">
            <h3>Create Location</h3>
        </div>
        <div class="col-sm-6 col-md-6 col-lg-6">
            @Html.ActionLink("All Location","LocationList","Location",null,new { @class="btn btn-black float-right" })
        </div>
    </div>
    <div class="row border-bottom mt-2"></div>
    
        @if (ViewBag.Message != null)
        { 
            <div class="row">
                <div class="alert @(ViewBag.Type==1?"alert-success":"alert-danger")" role="alert">
                    <strong>@ViewBag.Message</strong>
                    <button type="button" class="close" data-dissmiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        }
            
    @using (Html.BeginForm(FormMethod.Post))
    {
        <div class="row mt-2 border ml-0 mr-0">
            <div class="col-sm-12 col-md-12 col-lg-12 bg-gray-color">
                <div class="row">
                    <div class="col-sm-6 col-md-6 col-lg-6"><label class="mt-2 font-weight-bold">Location Detail</label></div>
                    <div class="col-sm-6 col-md-6 col-lg-6"><input type="button" value="" onclick="location.href='@Url.Action("CreateLocation", "Location")'" class="btn btn-clear float-right" /></div>
                </div>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-12">
                <div class="row mt-2">
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-lg-12">
                                <div class="form-group">
                                    @Html.HiddenFor(m => m.LocationID)
                                    @Html.LabelFor(m => m.LocationName)
                                    @Html.TextBoxFor(m => m.LocationName, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-lg-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ShortName)
                                    @Html.TextBoxFor(m => m.ShortName, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-lg-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Description)
                                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-lg-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Code)
                                    @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-lg-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Phone)
                                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-lg-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Email)
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-lg-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Address)
                                    @Html.TextAreaFor(m => m.Address, new { @class = "form-control textarea-height" })
                                </div>
                            </div>
                        </div>
                        @if ((ViewBag.Branches as SelectList).Count() > 0)
                {
                            <div class="row">
                                <div class="col-sm-12 col-md-12 col-lg-12">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.BranchName)
                                        @Html.DropDownListFor(m => m.BranchID, ViewBag.Branches as SelectList, "--Select Branch--", new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-lg-12">
                                @if (ViewBag.FormType != 2)
                                {
                                    <input type="submit" value="SAVE" formaction="@Url.Action("InsertLocation","Location")" class="btn btn-lg btn-red float-right" />
                                }
                                else
                                {
                                    <input type="submit" value="UPDATE" formaction="@Url.Action("UpdateLocation","Location")" class="btn btn-lg btn-red float-right" />
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>       
    }
    
</div>

