<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory & POS System</title>

    @Scripts.Render("~/bundles/modernizr")

    @Styles.Render("~/Content/masterstyle.css")
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/jquery.mCustomScrollbar.min.css")
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/Scripts/solid.js")
    @Scripts.Render("~/Scripts/fontawesome.js")
    @Scripts.Render("~/Scripts/Site.js")

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
</head>
<body>
    <div class="wrapper">

        <!-- Sidebar -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>Shop Name</h3>
            </div>

            <ul class="list-unstyled components">

                <p style="color:#F0B81B">SETUP</p>
                <div class="menu-divider"></div>
               
                <li>
                    <a href="#" onclick="changeModuleName('Product');"><i class="fas fa-cubes menu-icon"></i>Product</a>
                </li>
                <li>
                    <a href="#" onclick="changeModuleName('Customer');"><i class="fas fa-user-tie menu-icon"></i>Customer</a>
                </li>
                <li>
                    <a href="#" onclick="changeModuleName('Supplier');"><i class="fas fa-user-tie menu-icon"></i>Supplier</a>
                </li>
                <li>
                   <a href="~/User/UserList" onclick="changeModuleName('User');"><i class="fas fa-user menu-icon"></i>User</a>
                </li>
                <li>
                    <a href="#" onclick="changeModuleName('User Right');"><i class="fas fa-user-md menu-icon"></i>User Right</a>
                </li>
                <li>
                    <a href="#" onclick="changeModuleName('Township');"><i class="fas fa-building menu-icon"></i>Township</a>
                </li>
                <li>
                    <a href="#" onclick="changeModuleName('Branch');"><i class="fas fa-industry menu-icon"></i>Branch</a>
                </li>
                <li>
                    <a href="#" onclick="changeModuleName('Location');"><i class="fas fa-store menu-icon"></i>Location</a>
                </li>
                <li>
                    <a href="#" onclick="changeModuleName('Unit');"><i class="fas fa-ruler menu-icon"></i>Unit</a>
                </li>
                <li>
                    <a href="#" onclick="changeModuleName('Adjust Type');"><i class="fas fa-adjust menu-icon"></i>Adjust Type</a>
                </li>
                <li>
                    <a href="#" onclick="changeModuleName('Payment');"><i class="fas fa-money-bill-wave-alt menu-icon"></i>Payment</a>
                </li>
                <li>
                    <a href="#" onclick="changeModuleName('Voucher Format');"><i class="fas fa-clipboard-list menu-icon"></i>Voucher Format</a>
                </li>
                <li>
                    <a href="#" onclick="changeModuleName('Voucher Setting');"><i class="fas fa-cog menu-icon"></i>Voucher Setting</a>
                </li>
                <li>
                    <a href="#" onclick="changeModuleName('Company Setting');"><i class="fas fa-cog menu-icon"></i>Company Setting</a>
                </li>
                <li>
                    <a href="#" onclick="changeModuleName('System Setting');"><i class="fas fa-cog menu-icon"></i>System Setting</a>
                </li>
            </ul>

            <ul class="list-unstyled CTAs">
                <li>
                    <a href="~/Home/Index" class="download" style="color:#1a827b">BACK</a>
                </li>
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content">

            <div>
                <nav class="navbar navbar-expand-lg navbar-light gray-backcolor">
                    <div class="container-fluid">

                        <button type="button" id="sidebarCollapse" class="btn">
                            <i class="fas fa-align-left"></i>
                        </button>

                        <div style="margin-left: 10px;font-weight: bold;color:#425367">
                            <label id="lblModuleName">SETUP</label>
                        </div>

                        <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <i class="fas fa-align-justify"></i>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="nav navbar-nav ml-auto">
                                <li class="nav-item">
                                    <a class="nav-link" href="#" style="color:#425367">@Session["LoginUserName"]</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" style="color:#FE5455" href="~/User/Login">Logout</a>
                                </li>
                            </ul>
                        </div>

                    </div>
                </nav>
            </div>

            <div class="container-fluid">
                @RenderBody()
                <div />

                <footer>
                    <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                </footer>

            </div>

        </div>

    </div>

    @Scripts.Render("~/Scripts/jquery-3.3.1.slim.min.js")
    @Scripts.Render("~/Scripts/popper.min.js")
    @Scripts.Render("~/Scripts/bootstrap.min.js")
    @Scripts.Render("~/Scripts/jquery.mCustomScrollbar.concat.min.js")

    <script type="text/javascript">
        $(document).ready(function () {
            $("#sidebar").mCustomScrollbar({
                theme: "minimal"
            });

            $('#sidebarCollapse').on('click', function () {
                $('#sidebar, #content').toggleClass('active');
                $('.collapse.in').toggleClass('in');
                $('a[aria-expanded=true]').attr('aria-expanded', 'false');
            });
        });
        function changeModuleName(name) {
            $("#lblModuleName").text(name);
        }
    </script>


    @RenderSection("scripts", required: false)
</body>
</html>
